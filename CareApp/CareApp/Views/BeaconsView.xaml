<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="CareApp.Views.BeaconsView">
	<ContentPage.Content>
		<StackLayout>
			<Button x:Name="btnScan" Text="Escanear" Clicked="OnScan_Clicked"/>
			<ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
				<ListView x:Name="lstBeacons" ItemsSource="{Binding Beacons}" VerticalOptions="FillAndExpand"
				HasUnevenRows="true" ItemTapped="OnList_Tapped">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<ViewCell.View>
									<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
										<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
											<Label Text="{Binding Uuid}"/>
										</StackLayout>
										<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
											<Label Text="Distance:"/>
											<Label Text="{Binding RelativeDistance}" />
										</StackLayout>
										<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
											<Label Text="ID:"/>
											<Label Text="{Binding Major}"/>
										</StackLayout>
									</StackLayout>
								</ViewCell.View>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>