<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CareApp.Views.LoginView">
  <ContentPage.Content>
    <StackLayout>
      <Entry x:Name="txtUsername" Placeholder="Usuario"/>
      <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="true"/>
      <Button x:Name="btnLogin" Text = "Iniciar sesión" Clicked="btnLogin_Clicked" />
      <ActivityIndicator x:Name="actLoading" IsVisible="false" IsRunning="false" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>