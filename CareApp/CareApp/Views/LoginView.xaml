<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CareApp.Views.LoginView"
             Style="{StaticResource pageStyle}"
             Title="CareApp">
  <ContentPage.Content>
    <StackLayout Style="{StaticResource stackStyle}">
      <Entry x:Name="txtUsername" Placeholder="Usuario" Style="{StaticResource txtStyle}"/>
      <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="true" Style="{StaticResource txtStyle}"/>
      <Grid x:Name="grdButtons">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnLogin" Grid.Row="0" Grid.Column="0" Text = "Iniciar sesión" Clicked="btnLogin_Clicked" Style="{StaticResource btnStyle}"/>
        <Button x:Name="btnSignup" Grid.Row="0" Grid.Column="1" Text = "Registrarse" Clicked="btnSignup_Clicked" Style="{StaticResource btnStyle}"/>
      </Grid>
      <!--todo: usar esta huevada-->
      <ActivityIndicator x:Name="actLoading" IsVisible="false" IsRunning="false" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>