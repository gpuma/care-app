<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CareApp.Views.PatientAlertView">
  <ContentPage.Content>
    <StackLayout>
      <Label x:Name="txtAlerta" XAlign="Center" YAlign="Center" FontSize="45" Text="¿ESTÁS BIEN?"/>
      <!--todo: añadir label que informe del progreso-->
      <Label x:Name="txtMensaje" Text="{Binding MsjTiempo}" XAlign="Center" YAlign="Center" FontSize="25"/>
      <ProgressBar x:Name="progBar"/>
      <Button x:Name="btnAyuda" Image="ambulance.png" FontSize="40" Text="AYUDA" Clicked="btnAyuda_Clicked"/>
      <Button x:Name="btnOk" Image="okay.png" FontSize="40" Text="ESTOY BIEN" Clicked="btnOk_Clicked"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
